<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="τίτλος"></title>
    <link rel="stylesheet" href="/tsioftolithomata/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/css/lightgallery.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/css/lg-zoom.min.css">
</head>
<body>
    <div id="header-container"></div>
    <main>
        <section id="{{name}}">
            <h2 id="{{name}}-τίτλος"></h2>

            <p id="{{name}}-περιγραφή"></p>
            <h4 id="{{name}}-περίοδος"></h4>
            <h4 id="{{name}}-περιοχή"></h4>
            <h3 id="ταξονομία"></h3>
            <ul>
                <li id="{{name}}-βασίλειο"></li>
                <li id="{{name}}-συνομοταξία"></li>
                <li id="{{name}}-ομοταξία"></li>
                <li id="{{name}}-υφομοταξία"></li>
                <li id="{{name}}-οικογένεια"></li>
                <li id="{{name}}-γένος"></li>
                <li id="{{name}}-είδος"></li>
            </ul>
        </section>
        <div id="gallery">
            <a href="/tsioftolithomata/images/{{name}}/sample1/{{name}}1.jpg" id="gallery-1" data-sub-html="@@@@@@@@@@@@@@@">
                <img src="/images/{{name}}/sample1/{{name}}1.jpg" alt="example text">
            </a>
            </a>
        </div>
    </main>

    <footer>
        <p id="footer-name"></p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/lightgallery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/plugins/zoom/lg-zoom.min.js"></script>

    <script 
        id="language-script"
src="/scripts/language.js"
        dict="{{name_dir}}/{{name}}.json"
        keys="τίτλος,{{name}}-τίτλος,{{name}}-περιγραφή,{{name}}-περίοδος,{{name}}-περιοχή,ταξονομία,{{name}}-βασίλειο,{{name}}-συνομοταξία,{{name}}-ομοταξία,{{name}}-υφομοταξία,{{name}}-οικογένεια,{{name}}-γένος,{{name}}-είδος"
        galleryLength="1"
    >
    </script>
    <script>
        let gallery;

        function initializeGallery() {
            const galleryElement = document.getElementById('gallery');
            gallery = lightGallery(galleryElement, {
                plugins: [lgZoom],
                thumbnail: true,
                loop: true,
                autoplay: true,
                speed: 500,
                pause: 3000
            });
            galleryElement.gal = gallery;
        }

        // Destroy the existing lightGallery instance
        if (gallery) {
            gallery.destroy();
        }

        // Re-initialize lightGallery
        initializeGallery();
    </script>


 <script src="/scripts/header.js" id="header-script"></script>
<script src="/scripts/navpath.js" id="navpath-script"></script>
</body>
</html>